{
  "name": "@ldesign/formatter",
  "version": "1.0.0",
  "description": "统一的代码格式化工具 - 集成 Prettier、ESLint、Stylelint",
  "keywords": [
    "ldesign",
    "formatter",
    "prettier",
    "eslint",
    "stylelint",
    "code-formatter",
    "git-hooks"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.js",
      "require": "./dist/cli/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "dist",
    "templates",
    "bin"
  ],
  "bin": {
    "ldesign-formatter": "./bin/cli.js",
    "lformatter": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "prettier": "^3.2.5",
    "eslint": "^9.18.0",
    "stylelint": "^16.10.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "commander": "^12.0.0",
    "inquirer": "^9.2.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "ejs": "^3.1.9",
    "execa": "^8.0.1",
    "cosmiconfig": "^9.0.0",
    "ignore": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@types/inquirer": "^9.0.7",
    "@types/ejs": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/eslint": "^9.0.0",
    "typescript": "^5.7.3",
    "tsup": "^8.0.0",
    "vitest": "^1.6.1",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

