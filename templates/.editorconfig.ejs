root = true

[*]
charset = utf-8
end_of_line = <%= endOfLine %>
  insert_final_newline = true
  trim_trailing_whitespace = true
  indent_style = <%= useTabs ? 'tab' : 'space' %>
    indent_size = <%= tabWidth %>

      [*.md]
      trim_trailing_whitespace = false

      [*.{json,yml,yaml}]
      indent_size = 2